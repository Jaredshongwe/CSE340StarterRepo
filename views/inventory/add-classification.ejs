<!-- views/account/register.ejs -->
<h1>
    <%= title %>
</h1>

<div class="register-container">
    <!-- Flash messages -->
    <%- messages() %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <!-- Add Classification form -->
                <form action="/inv/add-classification" method="POST">
                    <p>All fields are required</p>
                    <label for="classification_name">Classification Name</label>
                    <p>Name Must Be Alphabetic Characters Only.</p>
                    <input type="text" id="classification_name" name="classification_name" required
                        value="<%= locals.classification_name %>">
                    <button type="submit">Add Classification</button>
                </form>
</div>