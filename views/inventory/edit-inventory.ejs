<!-- views/inventory/edit-inventory.ejs -->

<h1>
    <%= title %>
</h1>

<div class="register-container">
    <!-- Flash messages -->
    <%- messages() %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <!-- Edit Inventory form -->
                <form id="updateForm" action="/inv/update" method="POST">

                    <p>All Fields Are Required</p>
                    <label for="classification_name">Classification </label>
                    <%- classificationSelect %>

                        <label for="inv_make">Make:</label>
                        <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>">

                        <label for="inv_model">Model:</label>
                        <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>">

                        <label for="inv_description">Description:</label>
                        <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>

                        <label for="inv_image">Image Path:</label>
                        <input type="text" id="inv_image" name="inv_image" value="<%= inv_image %>" required>

                        <label for="inv_thumbnail">Thumbnail Path:</label>
                        <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail %>"
                            required>

                        <label for="inv_price">Price:</label>
                        <input type="number" id="inv_price" name="inv_price" required value="<%= inv_price %>">

                        <label for="inv_year">Year:</label>
                        <input type="number" id="inv_year" name="inv_year" required value="<%= inv_year %>">

                        <label for="inv_miles">Miles:</label>
                        <input type="number" id="inv_miles" name="inv_miles" required value="<%= inv_miles %>">

                        <label for="inv_color">Color:</label>
                        <input type="text" id="inv_color" name="inv_color" value="<%= inv_color %>">

                        <input type="hidden" id="inv_id" name="inv_id" value="<%= inv_id %>">

                        <button type="submit" disabled>Update Vehicle</button>
                </form>
</div>

<script src="../../js/inv-update.js"></script>